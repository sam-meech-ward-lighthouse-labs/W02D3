  <title>Dragons</title>
</head>
<body>

  <ul>
  <% for(const dragon of dragons) { %>
    <li>
      <p>name: <%= dragon.name %>, type: <%= dragon.type %></p>
      <form action="/dragons/<%= dragon.name %>/delete" method="post">
        <button>␡</button>
      </form>
    </li>
  <% } %>
